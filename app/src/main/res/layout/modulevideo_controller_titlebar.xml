<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/modulevideo_shape_video_titlebar"
    android:paddingTop="8dp"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/modulevideo_titlebar_iv_back"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:src="@drawable/modulevideo_selector_iv_back"
        android:tint="@color/modulevideo_tint_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/modulevideo_titlebar_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/modulevideo_titlebar_iv_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/modulevideo_titlebar_iv_more"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="24dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:src="@drawable/modulevideo_selctor_iv_more"
        android:textColor="@android:color/white"
        android:tint="@color/modulevideo_tint_iv"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>